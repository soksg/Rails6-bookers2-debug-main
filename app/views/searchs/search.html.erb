  <!--検索対象モデルがUserの時 -->
<% if @range == "User" %>
  <%= render 'users/index' %>
<% else %>
    <!--検索対象モデルがUserではない時(=検索対象モデルがBookの時)-->
 <h2>Books search for "<%= params[:word] %>"</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th><strong>Title</strong></th>
        <th><strong>Opinion</strong></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(50,50) %></td>
          <td>
            <%= link_to book_path(book) do %>
            <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>